{
  "name": "nhk-ts",
  "version": "1.1.1",
  "description": "TVHeadEnd Recording Trimmer using FFmpeg black detection",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nhk-ts": "./dist/index.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "cli",
    "nhk",
    "ffmpeg",
    "video",
    "trimmer"
  ],
  "author": "UpperCenter",
  "license": "MIT",
  "devDependencies": {
    "@types/cheerio": "^1.0.0",
    "@types/node": "^24.10.0",
    "@types/sqlite3": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "commander": "^14.0.2",
    "p-limit": "^7.2.0",
    "sqlite3": "^5.1.7",
    "string-similarity": "^4.0.4"
  }
}
